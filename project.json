{
  "name": "vendure-backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/vendure-backend/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd apps/vendure-backend && npm run build && cp -r static dist/"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd apps/vendure-backend && npm run dev"
      }
    },
    "dev:server": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd apps/vendure-backend && npm run dev:server"
      }
    },
    "dev:worker": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd apps/vendure-backend && npm run dev:worker"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd apps/vendure-backend && npm run start"
      }
    },
    "start:server": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd apps/vendure-backend && npm run start:server"
      }
    },
    "start:worker": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd apps/vendure-backend && npm run start:worker"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/vendure-backend/jest.config.ts"
      }
    },
    "codegen": {
      "executor": "@nx/js:node",
      "options": {
        "script": "apps/vendure-backend/codegen.ts"
      }
    }
  },
  "tags": ["scope:backend", "type:app"]
} 